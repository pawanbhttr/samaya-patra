@model User
@{
    ViewData["Title"] = "Add User";
}

<div class="card shadow-sm my-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">User Info</h6>
    </div>
    <div class="card-body">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserID">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="UserName">Username<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" asp-for="UserName" placeholder="Username">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Password">Password<span class="text-danger">*</span></label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ConfirmPassword">
                        Confirm Password
                        <span class="text-danger">*</span>
                    </label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="FullName">Fullname<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" asp-for="FullName" placeholder="Full Name">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="UserRoleID">User Role<span class="text-danger">*</span></label>
                    <select class="form-control" asp-for="UserRoleID" asp-items="@(new SelectList(ViewBag.UserRoles,"UserRoleID", "UserRoles"))"></select>
                    <span asp-validation-for="UserRoleID" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Contact">Contact</label>
                    <input type="text" class="form-control" asp-for="Contact" placeholder="Contact (10 Digits only)">
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Email">Email</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Address">Address</label>
                    <input type="text" class="form-control" asp-for="Address" placeholder="Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="VehicleID">Vehicle No</label>
                    <select class="form-control" asp-for="VehicleID" asp-items="@(new SelectList(ViewBag.Vehicles,"VehicleID", "VehicleNo"))"></select>
                </div>
                <div class="form-group col-md-6">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" data-toggle="tooltip" title="Save Vehicle" class="btn btn-sm btn-outline-primary"><i class="fa fa-save"></i>&nbsp;Save</button>
                &nbsp;
                <a class="btn btn-sm btn-outline-secondary" data-toggle="tooltip" title="Cancel" asp-action="Index"><i class="fa fa-remove"></i>&nbsp;Cancel</a>
            </div>
        </form>
    </div>
</div>
